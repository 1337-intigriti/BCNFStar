{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "dist",
    "lib": ["es2021"],
    "paths": {
      "@common/*": ["../common/*"],
      "@/*": ["*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["./**/*.ts"]
}
